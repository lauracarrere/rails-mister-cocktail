<div class="container-fluid">
  <div class="container  mt-5 w-80">
    <div class="card-product">

      <% if @cocktail.photo.attached?%>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key, width: 100, height: 100, crop: :fill %>)">
        </div>
      <% else %>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
        </div>
      <%end%>

      <div class="card-product-infos">
        <h2><%=@cocktail.name%></h2>
      </div>
    </div>
  </div>

  <div class="container  mt-3 w-80">
    <h4>Ingredients</h4>
    <p>
      <% @cocktail.doses.each do |dose|%>
        <%= dose.ingredient.name %> : <%=dose.description%>
      <%end%>
    </p>

    <h5 class="mt-3">Add an ingredient</h5>
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :ingredient, collection: Ingredient.all %>
      <%= f.input :description %>
      <%= f.submit 'Add ingredient', class: 'btn btn-dark' %>
    <% end %>
    <div class="links mt-2 mb-2">
      <%= link_to 'edit cocktail', edit_cocktail_path(@cocktail)%>
      <p></p>
      <%= link_to 'back to list', cocktails_path%>
    </div>

  </div>
</div>



