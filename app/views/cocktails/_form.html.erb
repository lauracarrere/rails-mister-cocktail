<% if cocktail.photo.attached?%>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, width: 100, height: 100, crop: :fill %>)">
    <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>
    </div>
  </div>
<% else %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
    <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>
    </div>
  </div>
<%end%>


